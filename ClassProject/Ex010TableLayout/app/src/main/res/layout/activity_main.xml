<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- TableLayout은 LinearLayout을 상속했음   -->
    <!-- 뷰들이 겹칠 수 없음.  -->

    <!-- TableLayout안에서는 뷰들을 만들때 width,height 생략할 수 있음. [자동 wrap_content]  -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TableRow>
            <Button android:text="1"/>
            <Button android:text="2222222222222222"/>
            <Button android:text="3"/>
        </TableRow>

        <TableRow>
            <Button android:text="4"/>
            <Button android:text="5" android:layout_column="2"/>
        </TableRow>

        <TableRow>
            <Button android:text="6"/>
            <Button android:text="7" android:layout_span="2"/>
        </TableRow>

    </TableLayout>

</LinearLayout>