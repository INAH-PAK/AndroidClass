<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="서버에 있는 JSON GET으로 가져오기"/>

    <Button
        android:id="@+id/btn02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text="서버에 있는 JSON GET으로 가져오기 - Path이용"/>

    <Button
        android:id="@+id/btn03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text=" GET METHOD를 이용한 HTTP request 내가 쓴 글 보내기"/>

    <Button
        android:id="@+id/btn04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text=" GET METHOD를 이용한 HTTP request 내가 쓴 글 보내기 By Path"/>


    <Button
        android:id="@+id/btn05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:text=" GET METHOD를 이용한 HTTP request 내가 쓴 글 보내기 By Path - map 컬렉션 사용"/>

    <Button
        android:id="@+id/btn06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:background="@color/purple_700"
        android:layout_margin="4dp"
        android:text=" POST METHOD를 이용한 HTTP request 내가 쓴 글 보내기 "/>

    <Button
        android:id="@+id/btn07"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:background="@color/purple_700"
        android:layout_margin="4dp"
        android:text=" POST METHOD를 이용한 HTTP request 내가 쓴 글 보내기 by Field "/>

    <Button
        android:id="@+id/btn08"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:background="@color/purple_700"
        android:layout_margin="4dp"
        android:text=" GET METHOD를 이용한 HTTP request 내가 쓴 글 보내기 by Field to jsonArray "/>


    <Button
        android:id="@+id/btn09"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:background="@color/purple_700"
        android:layout_margin="4dp"
        android:text=" GET METHOD를 이용한 HTTP request 내가 쓴 글 받기 : 파싱없이 ! "/>




</LinearLayout>